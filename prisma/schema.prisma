generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model chats {
  id        String    @id @default(uuid())
  pdf_Name  String
  pdf_url   String
  user_id   String
  file_key  String
  createdAt DateTime  @default(now())
  message   message[]
}

model message {
  id      String  @id @default(uuid())
  chat_id String
  content String
  role    Role
  chats   chats?  @relation(fields: [chatsId], references: [id])
  chatsId String?
}

enum Role {
  user
  system
}
